/* pages/login/login.wxss */
.loginBox{
  width: 100%;
  height: 100%;
  background: -webkit-linear-gradient(top, #1CA1FF , #832BFF); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(bottom, #1CA1FF, #832BFF); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(bottom, #1CA1FF, #832BFF); /* Firefox 3.6 - 15 */
  background: linear-gradient(to bottom, #1CA1FF, #832BFF); /* 标准的语法 */
  text-align: center;
  position: absolute;
}
.logo{
  width: 244rpx;
  height: 266rpx;
  margin-top: 177rpx;
}

.tel,.yzm{
  width: 517rpx;
  margin: 78rpx auto;
  margin-bottom: 0;
  display: flex;
  line-height:60rpx; 
  border-bottom: 1px solid #7ca6fc;
  padding: 0 10rpx 13rpx 10rpx;
}
.yzm{
  margin: 35rpx auto;
}
.tel .yzmActive,.loginin.loginActive{
 background-color:#fff;
}
.yzmActive button[disabled]{
  background-color:#8ca5f6;
}
.tel button[disabled]{
  color:#000;
}
.telLogo,.keyLogo{
  width:26rpx;
  height: 36rpx;
  margin-top: 12rpx;
  margin-left: 20rpx;
}

.keyLogo{
  width: 35rpx;
  margin-left: 11rpx;
}
.telInput{
  width: 194rpx;
  font-size: 28rpx;
  color: #fff;
  text-align: left;
  padding-right: 5rpx;
  margin: 4rpx 0rpx 4rpx 30rpx;
}
.phcolor{
    color:#D2F6FA;
}
.getYzm{
  width: 166rpx;
  padding: 0;
  text-align: center;
  font-size: 24rpx;
  background: #8CA5F6;
  border-radius: 8rpx;
  color: #565656;
  border: none;
  outline: none;
}

.loginin{
  width: 518rpx;
  margin: 55rpx auto;
  background-color: #B6C6FB;
  color: #565656;
  font-size: 28rpx;
  line-height: 82rpx;
}
