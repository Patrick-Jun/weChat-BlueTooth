.status-box{
  width: 100%;
  position: absolute;
  top: 0;
  bottom: 0;
  overflow: hidden;
}
.swiper-tab{
    width: 100%;
    border-bottom: 4rpx solid #2F97FB;
    text-align: center;
    height: 93rpx;
    line-height: 93rpx;
    font-size: 30rpx;
    background-color: #fff;
    border-top: 20rpx solid #EEEEEE;
}
.swiper-tab-item{
    display: inline-block;
    width: 33.3%;
