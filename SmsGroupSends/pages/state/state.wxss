.lists{
  position: absolute;
  top:68rpx;
  bottom: 154rpx;
  width: 100%;
  overflow: auto;
  background: #fff;
}
.lists .list{
  float: left;
  border-bottom: 1px solid #E9E8E8;
  padding: 10rpx 0;
}
.check {
  zoom: 113%;
}
.check .wx-checkbox-input{
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%; 
  margin-top: 20rpx;
  float: left;
}
.check .wx-checkbox-input.wx-checkbox-input-checked{
  background: #09BB07;
  border:1rpx solid #09BB07;
}

.check .wx-checkbox-input.wx-checkbox-input-checked::before{
   width: 18rpx;/* 选中后对勾大小，不要超过背景的尺寸 */
   height: 18rpx;/* 选中后对勾大小，不要超过背景的尺寸 */
   color:#fff; /* 对勾颜色 白色 */
   line-height: 30rpx;
   text-align: center;
   transform:translate(-90%, -70%) scale(0.5);
}
