<!--pages/state/state.wxml-->
<view class='status-box'>
  <view class='swiper-tab'>
    <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">已发送</view>
    <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">发送成功</view>
    <view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">发送失败</view>
  </view>
  <swiper class='swiperList' current='{{currentTab}}' duration="300" bindchange="swiperTab" style=''>
    <swiper-item class='senderover'>
      <!--已发送列表  -->
      <view class='tips'>
        <view class='tips-left'>序号</view>
        <view class='tips-center'>手机号码</view>
        <view class='tips-right'>取件码</view>
      </view>
      <view class='scroll-box'>
        <view class='no_message' wx:if="{{list.length==0?true:false}}">
          <image src='/images/no_message@2x.png'></image>
          <view>您还没有通知</view>
        </view>
        <view class='list' wx:for="{{list}}">
          <view class='tips-left'>{{list.length-index}}</view>
          <view class='tips-center'>{{item.receiveTelephone}}</view>
          <view class='tips-right'>{{item.takeCode}}</view>
        </view>
      </view>
    </swiper-item>
    <swiper-item class='sendersuccess'>
      <!--发送成功列表  -->
      <view class="section">
        <picker bindchange="bindPickerChange" value="{{index}}" mode='selector' range="{{array}}">
          <view class="picker">
            <view class='tips'>筛选</view>
            <image src='/images/arrow_down.png' class='toBottom'></image>
          </view>
        </picker>
      </view>
      <checkbox-group class='lists' bindchange="checkboxChange">
        <view class='no_message' wx:if="{{items.length==0?true:false}}">
          <image src='/images/no_message@2x.png'></image>
          <view>您还没有通知</view>
        </view>
        <label class='checkbox list' wx:for='{{items}}' wx:key="index">
          <!-- <label class='checkbox list' > -->
          <view class='list-left'>
            <checkbox value='{{index}}' checked='{{item.checked}}' class='check'></checkbox>
            <!-- <checkbox value='0' checked='true' ></checkbox> -->
          </view>
          <view class='list-right'>
            <view class='list-top'>
              <text class='num'>{{item.receiveTelephone||null}}</text>
              <text class='qj'>取件码：{{item.takeCode||null}}</text>
              <rich-text>通知时间：{{item.sendTime||null}}</rich-text>
            </view>
            <view class='list-bottom'>
              <text class='ms-type' wx:if='{{item.notifyState=="0"}}'>短信发送失败</text>
              <text class='ms-type success' wx:else>短信发送成功</text>
              <text class='ms-mess'>韵达快递：{{item.informContent||null}}</text>
            </view>
          </view>
        </label>
      </checkbox-group>
      <view class='bottom'>
        <view class='all' bindtap='selectAll'>
          <label class="radio">
            <radio value="全选" checked='{{all}}' />全选
          </label>
        </view>
        <view class='submit' bindtap='send'>重新发送</view>
      </view>
    </swiper-item>
    <swiper-item>
      <!--发送失败  -->
      <view class="section">
        <picker bindchange="bindPickerChange2" value="{{index}}" mode='selector' range="{{array}}">
          <view class="picker">
            <view class='tips'> 筛选</view>
            <image src='/images/arrow_down.png' class='toBottom'></image>
          </view>
        </picker>
      </view>

      <checkbox-group class='lists' bindchange="checkboxChange2">
        <view class='no_message' wx:if="{{items2.length==0?true:false}}">
          <image src='/images/no_message@2x.png'></image>
          <view>您还没有通知</view>
        </view>
        <label class='checkbox list' wx:for='{{items2}}' wx:key="index">
          <!-- <label class='checkbox list' > -->
          <view class='list-left'>
            <checkbox value='{{index}}' checked='{{item.checked}}' class='check'></checkbox>
            <!-- <checkbox value='0' checked='true' ></checkbox> -->
          </view>
          <view class='list-right'>
            <view class='list-top'>
              <text class='num'>{{item.receiveTelephone||null}}</text>
              <text class='qj'>取件码：{{item.takeCode||null}}</text>
              <rich-text>通知时间：{{item.sendTime||null}}</rich-text>
            </view>
            <view class='list-bottom'>
              <text class='ms-type' wx:if='{{item.notifyState=="0"}}'>短信发送失败</text>
              <text class='ms-type success' wx:else>短信发送成功</text>
              <text class='ms-mess'>韵达快递：{{item.informContent||null}}</text>
            </view>
          </view>
        </label>
      </checkbox-group>
      <view class='bottom' wx:if='{{item.length==0}}' >
        <view class='all' bindtap='selectAll2'>
          <label class="radio">
            <radio value="全选" checked='{{all2}}' />全选
          </label>
        </view>
        <view class='submit' bindtap='send2'>重新发送</view>
      </view>
    </swiper-item>
  </swiper>
</view>