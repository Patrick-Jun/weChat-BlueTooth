/* pages/notice/notice.wxss */

.box {
  width: 100%;
  height: 100%;
}

.head {
  width: 100%;
  display: flex;
  background-color: #eee;
  font-size: 28rpx;
  padding: 14rpx 28rpx;
  line-height: 90rpx;
  height: 90rpx;
  box-sizing: border-box;
  color: #b9b9b9;
}

.head text {
  float: left;
  flex: 6;
  background-color: #fff;
  line-height: 85rpx;
  height: 85rpx;
  text-align: center;
  border-right: 1px solid #e9e8e8;
}

.head input {
  flex: 15;
  background-color: #fff;
  line-height: 85rpx;
  height: 85rpx;
  padding-left: 20rpx;
}

.head image {
  width: 36rpx;
  height: 45rpx;
  padding: 20rpx;
  background-color: #fff;
}

.tips{
  width: 100%;
  display: flex;
  font-size: 28rpx;
  height: 67rpx;
  line-height: 67rpx;
  background: #fff;
  border: 1px solid #e9e8e8;
  color: #666;
}

.tips {
  position: absolute;
  top: 111rpx;
}

.tips-left {
  flex: 5;
  text-align: center;
}

.tips-center {
  flex: 7;
  text-align: center;
}

.tips-right {
  text-align: center;
  flex: 8;
}

.scroll-box {
  width: 100%;
  position: absolute;
  top: 181rpx;
  bottom: 127rpx;
  overflow: auto;
  background: #fff;
}

.touch-item {
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #ccc;
  width: 100%;
  overflow: hidden;
  height: transition 0.5 all;
}

.content {
  width: 100%;
  padding: 10px;
  line-height: 12px;
  margin-right: 0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px;
  display: flex;
}

.del {
  background-color: orangered;
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.btn-submit {
  width: 100%;
  position: absolute;
  bottom: 0;
  line-height: 110rpx;
  display: flex;
  font-size: 36rpx;
}

.btn-left {
  flex: 5;
  text-align: center;
  color: #2f97fb;
  background-color: #fff;
}

.btn-left image {
  width: 30rpx;
  height: 20rpx;
  margin: 45rpx 45rpx 0 0;
  float: right;
  transform: rotate(-90deg);
}

.btn-right {
  flex: 2;
  text-align: center;
  background-color: #2f97fb;
  color: #fff;
}

.head .active {
  flex: 24;
}

.error {
  color: red;
}

.touch-move-active .content, .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}
