/* pages/call/call.wxss */
.inputContainer{
  width: 100%;
  top: 30rpx;
  position: absolute;
}
.inputContent {
  display: flex;
  display: -webkit-flex;
  width: 690rpx;
  height: 88rpx;
  margin: 0  30rpx;
  line-height: 88rpx;
  border-radius: 10rpx;
  background: #fff;
}

.inputContent text {
  flex-grow: 2;
  height: 88rpx;
  line-height: 88rpx;
  padding-left: 34rpx;
  font-size: 28rpx;
}

.voice {
  width: 36rpx;
  height: 45rpx;
  margin: 20rpx 40rpx 0 40rpx;
}

.scan {
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
  margin-top: 25rpx;
  vertical-align: middle;
}

.keybord{
  position: absolute;
  width: 100%;
  top: 200rpx;
  overflow: hidden;
}
.keybord button{
  width: 33%;
  float: left;
  line-height: 150rpx;
  text-align: center;
  background: #fff;
  margin: 0 2rpx 2rpx 0;
  font-size: 42rpx;
}
.callbtn{
  width: 80%;
  background-color: #2F97FB; 
  position: absolute;
  bottom: 40rpx;
  border-radius: 10rpx;
  margin-left: 10%;
  text-align: center;
}
.callbtn image{
  width: 100rpx;
  height: 100rpx;
}
.keybord .button-hover{
  color: black;
  background:#f5f5f5;
}
.keybord image{
  width: 32rpx;
  height: 32rpx;
}