/**index.wxss**/
.banner{
  width: 100%;
  height: 280rpx;
}
.banner image{
  width: 100%;
  height: 100%;
}
.nav{
  width: 100%;
  height: 350rpx;
  /* background: red; */
  position: relative;
}
.title{
  position: absolute;
  margin-top: -60rpx;
  left: 30rpx;
  right: 30rpx;
  height: 200rpx;
  border-radius:10rpx;
}
.title image{
  width: 100%;
  height: 100%;
  position: absolute;
}
.t-l,.t-c,.t-r{
  position: relative;
  width:33%;
  float: left;
  height: 100%;
  text-align: center;
}
.t-l image,.t-c image,.t-r image{
  position: relative;
  top: 42rpx;
  /* left: 84rpx; */
  /* right: 94rpx; */
  width: 70rpx;
  height: 70rpx;
}
.t-l view,.t-c view,.t-r view{
  position: relative;
  top: 50rpx;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  width: 100%;
}
.bar{
  position: absolute;
  bottom: 40rpx;
  left: 30rpx;
  right:30rpx;
  height: 136rpx;
  background: #fff
}
.bar-l,.bar-r{
  width: 320rpx;
  height: 136rpx;
  border: 1rpx solid rgba(177, 177, 177, 0.7);
  border-radius: 10rpx;
  float: left;
}
.bar-r{
  margin-left: 35rpx;
}
.bar-l image,.bar-r image{
  width: 50rpx;
  height: 60rpx;
  margin: 40rpx 32rpx 41rpx 54rpx;
  float: left;
}
.bar-title{
  margin: 30rpx 0 10rpx 0;
  font-size: 32rpx;
  color: rgb(51, 51, 51);
}
.bar-content{
  color: rgb(153, 153, 153);
  font-size: 22rpx;
}
.bar-content text{
  color: rgb(54, 162, 254);
}
.bottom{
  position: absolute;
  top: 625rpx;
  width:100%; 
  bottom: 0;
  background: rgb(245, 245, 245);
  box-sizing: border-box;
  padding-top: 40rpx;
  z-index: 10;
}
.bluetooth{
  width: 100%;
  padding: 40rpx 30rpx;
  background: #fff;
  box-sizing: border-box; 
  overflow: hidden;
  font-size: 28rpx;
}
.bluetooth-top image{
  width: 36rpx;
  height: 36rpx;
  float: left;
}
.bluetooth-top view{
  line-height: 36rpx;
  color: rgb(102, 102, 102);
  margin-left: 14rpx;
  float: left;
}
.bluetooth-bottom{
  width: 100%;
  float: left;
  margin-top: 20rpx;
  color: rgb(51, 51, 51);
}
.bluetooth-b-left{
  float: left;
}
.bluetooth-b-right{
  float: right;
}
.bluetooth-b-right image{
  width: 30rpx;
  height: 5rpx;
}
.about{
  width: 100%;
  overflow: hidden;
  /* position: absolute; */
  /* bottom: -140rpx; */
  padding: 30rpx 0;
  box-sizing: border-box;
  background: rgb(245, 245, 245);
}
.about view{
  color: rgb(153, 153, 153);
  text-align: center;
  width: 100%;
  font-size: 24rpx;
  line-height: 40rpx;
}
.bluetooth-list{
  margin-top: 36rpx;
}
.last-tips{
  color:rgb(46,160,255);
}
.bluetooth-list .tips{
  padding: 5px 0px;
}
.tips .moren{
  background: rgb(46,160,255);
  border-radius: 20rpx;
  color: #fff;
  top: 15rpx;
  position: absolute;
  right:59rpx;
  padding: 5rpx 20rpx;
  font-size: 25rpx;
}
