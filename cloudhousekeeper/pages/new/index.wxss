/* pages/index/newPackage/index.wxss */
.newPackageBox{
  position: absolute;
  width: 100%;
  top: 0;
  bottom: 0;
  background: #f5f5f5;
  overflow-y: auto;
}
.i-img{
  width: 40rpx;
  height: 40rpx;
}
.i-img-right{
  position:absolute;
  right:0;
  top:0;
}
.i-img-r{
  position:absolute;
  right:0;
  top:14px;
}
.sendDetail,.addresseeDetail,.itemType,.batchSend{
  /* margin:20rpx 0 0 0; */
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  background: #fff;
}
.sendDetail .left-icon,.addresseeDetail .left-icon,.itemType .left-icon,.batchSend .left-icon{
  line-height: 1;
   /* color: red; */
}

.sendDetail .cell-index--i-cell-ft{
 color: rgb(46,160,255);
}
.addresseeDetail .cell-index--i-cell-ft{
  color:#000;
}
.sendDetail .sendPerson .cell-index--i-cell-ft{
  color: #000;
}
.address{
  color: rgb(102, 102, 102);
}
.sendAddress .cell-index--i-cell-ft{
  padding-right: 40rpx;
}
.sendBottom{
  border-top: 1rpx solid #f5f5f5;
  padding: 25rpx 0 25rpx 77rpx;
  box-sizing: border-box;
  font-size: 14px;
}
.sendBottom .sendPerson,.sendBottom .address{
    padding: 0;
}
.sendAddress-bottom{
  padding: 15rpx 0 15rpx 77rpx;
  box-sizing: border-box;
  font-size: 14px;
  border-top: 1rpx solid #f5f5f5;
}
.sendAddress-bottom .address{
  padding: 0;
}
.sendAddress .sendName{
  padding: 0 15px 0 0;
}
.sendBottom text{
  color: rgb(46,160,255);
}
.form{
  border-top: 3rpx solid #f5f5f5;
}
.user{
  position: absolute;
  right: 64rpx;
  z-index: 55;
  margin-top: -69rpx;
}
.batchSend{
  margin-bottom: 150rpx;
}
.batchSend .text-content{
  text-align: center;
  color: rgb(102, 102, 102);
  padding: 5px 15px;
  border-top: 1px solid #f5f5f5;
}
.bottom{
  position: fixed;
  width: 100%;
  height: 100rpx;
  background: rgb(255, 128, 26);
  bottom: 0;
  color: #fff;
  z-index: 100;
}
.t1{
  width: 50%;
  float: left;
  text-align: center;
  line-height: 100rpx;
}
.t3{
  background: rgb(46, 160, 255);
}
.t2{
  background: rgb(46, 160, 255);
  width: 100%;
  line-height: 100rpx;
  text-align: center;
}
.sendListHead{
  border-top: 1rpx solid #f5f5f5;
}
.userlist{
  padding: 15rpx 0;
}
.batchSend-view{
   overflow: hidden;
}
.batchSend-view text{
 float: left;
 /* width: 60%; */
 font-size: 14px;
 line-height: 77rpx;
 box-sizing: border-box;
 padding-left: 69rpx;

}
.changeNum{
  /* width: 40%; */
  float: left;
  /* transform: scale(0.7); */
}
.itemBox{
  position: fixed;
  top: 0;
  bottom: 0;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}
.itemTypeList{
  width: 100%;
  position: fixed;
  bottom: 0;
  overflow: hidden;
  background: #fff;
  font-size: 30rpx;
}
.itemTypeList .itemList-top{
  border-bottom: 1rpx solid rgb(230, 230, 230);
  overflow: hidden;  
  height: 80rpx;
}
.itemList-top .cancel{
  color: #000;
  float: left;
  line-height: 80rpx;
  padding: 0 30rpx;
  position: absolute;
  z-index: 55;
}
.itemList-top .context{
  text-align: center;
  position: absolute;
  right: 0;
  left: 0;
  z-index: 1;
  color: rgb(102,102,102);
  float: left;
  line-height: 80rpx;
}
.itemList-bottom{
  padding:0 1.8%;
  box-sizing: border-box;
}
.itemList-bottom view{
  float: left;
  line-height: 75rpx;
  width: 29%;
  text-align: center;
  color: #000;
  border: 1px solid rgb(230, 230, 230);
  margin:1.8%;
  border-radius:5px;
}
.isFormMe .cell-index--i-cell-text{
  color: rgb(0, 0, 0);
}
.head-icon{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.isFormMe .head-text{
  color:rgb(102, 102, 102);
}
.newPackageBox .line{
  width: 100%;
  height: 6rpx;
  margin-bottom: -5rpx;
  margin-top: 20rpx;
}

.checked{
  border: 1rpx solid rgb(255, 0, 0);
  color: rgb(255, 0, 0);
}