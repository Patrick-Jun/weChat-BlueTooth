/* packageMy/myAddress/index.wxss */
page{
  overflow: hidden;
  background: #E6E6E6
}
/* 搜索 */
.search{
  background: #ffffff;
  padding: 30rpx 20rpx;
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
}
.search .input{
  flex-basis: 80%;
  font-size: 28rpx;
  background: #E6E6E6;
  padding: 10rpx 30rpx;
  border-radius: 40rpx;
  position: relative;
}
.search .input input{
  display: flex;
  align-items: center;
}
.search .input .my-icon{
  position: absolute;
  right: 24rpx;
  top: 4rpx;
}
.search .add{
  flex-basis: 20%;
  text-align: center;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  color: #2E9FFB;
}
.search .add .add-img{
  width:40rpx;
  height:40rpx;
  margin-right:8rpx;
}
.listBox{
  position: absolute;
  top: 10%;
  bottom: 0;
  width: 100%;
  padding-bottom: 134rpx;
  box-sizing: border-box;
}
/* 底部按钮*/
.btn{
  width: 100%;
  position: absolute;
  bottom: 0;
  line-height: 107rpx;
  text-align: center;
  background-color: #2E9FFB;
  font-size: 14px;
  color: #fff;
}
/* 索引列表 */
.index-list{
  position: fixed;
  top:0;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background: #EEEEEE;
}
.index-list scroll-view{
  margin-top: 22rpx;
}
.index-list .index-item-parent{
  border-bottom:1rpx solid #EFEFEF;
  background: #ffffff
}
.index-list .index-item .css_index_item{
  margin: 0 30rpx;
  border-bottom:1rpx solid #F6F6F6;
  padding: 20rpx;
  font-size: 34rpx;
}
.index-list .index-item:last-child .css_index_item{
  border-bottom:none;
} 
.index-list .index-item .css_index_item .top{
  display: flex;
  align-items: center;
  /* justify-content: space-between */
}
.index-list .index-item .css_index_item .top .name{
  margin-right: 20rpx
}
.index-list .index-item .css_index_item .top .deft{
  display: flex;
  align-items: center;
  margin-right:auto;
}
.index-list .index-item .css_index_item .top .deft .badge{
  background: #2E9FFB;
  color:#ffffff;
  padding: 4rpx 20rpx;
  font-size: 24rpx;
  display: unset;
  border-radius: 50rpx;
}
.index-list .index-item .css_index_item .top .tel{
  flex-basis: 50%;
  text-align: right;
}
.index-list .index-item .css_index_item .mid{
  margin-top: 20rpx;
  color: #666666
}
.index-list .index-item .css_index_item .buttom{
  color: #666666;
  display: flex;
  align-items: center;
}
.index-list .index-item .css_index_item .buttom .l{
  margin-right: auto;
}
.index-list .index-item .css_index_item .buttom .r .img{
  width: 50rpx;
  height: 50rpx;
}
/* checkbox */
.index-list .index-item .css_index_item .top .name{
  display: flex;
}
.index-list .index-item .css_index_item .top .name label{
  display: flex;
}
.index-list .index-item .css_index_item .top .name label .key{
  vertical-align: middle;
}
.index-list .index-item .css_index_item .top .name label .val{
  vertical-align: middle;
  margin-top: 4rpx
}
/*  重写 checkbox 样式  */
/* 未选中的 背景样式 */
checkbox .wx-checkbox-input{
  border-radius: 50%;/* 圆角 */
  width: 40rpx; /* 背景的宽 */
  height: 40rpx; /* 背景的高 */
}
/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
  border: 1rpx solid red;
  background: red;
}
/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
  border-radius: 50%;/* 圆角 */
  width: 40rpx;/* 选中后对勾大小，不要超过背景的尺寸 */
  height: 40rpx;/* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 40rpx;
  text-align: center;
  font-size:30rpx; /* 对勾大小 30rpx */
  color:#fff; /* 对勾颜色 白色 */
  background: transparent;
  transform:translate(-50%, -50%) scale(1);
  -webkit-transform:translate(-50%, -50%) scale(1);
}