/* package/intelligentCopy/index.wxss */
page{
  background: #f5f5f5;
}
.copyBox{
  padding: 25rpx;
  box-sizing: border-box;
  background: #fff;
  overflow: hidden;
}
.text{
  width: 100%;
  height: 300rpx;
  border: 1rpx solid #f5f5f5;
  font-size: 30rpx;
  line-height: 50rpx;
  box-sizing: border-box;
  padding: 25rpx;
}
.clean{
  font-size: 30rpx;
  float: right;
  margin-top: 25rpx;
  background: #fff;
}
.message{
  margin-top: 25rpx;
  width: 100%;
  float: right;
  padding: 10rpx;
  box-sizing: border-box;
}
.message .left-icon{
  padding: 0 25rpx;
  background: rgb(231, 245, 254);
}
.sure{
  font-size: 30rpx;
  width: 100%;
  background:rgb(37, 156, 253);
  color: #fff; 
  position: absolute;
  bottom: 0;
  margin-left: -25rpx;
  line-height: 90rpx;
}